<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="xir1n23.remidiuts.telkomschid.combinenavigation.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="8dp"
        android:text="PILIH NAVIGASI"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="248dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <Button
            android:id="@+id/buttonSwipeView"
            android:layout_width="185dp"
            android:layout_height="220dp"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Swipe View" />

        <Button
            android:id="@+id/buttonTabView"
            android:layout_width="185dp"
            android:layout_height="220dp"
            android:layout_column="2"
            android:layout_row="0"
            android:text="Tab View" />

        <Button
            android:id="@+id/buttonSpinnerView"
            android:layout_width="185dp"
            android:layout_height="220dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Spinner View" />

        <Button
            android:id="@+id/buttonNavDrawer"
            android:layout_width="185dp"
            android:layout_height="220dp"
            android:layout_column="2"
            android:layout_row="1"
            android:text="Nav Drawer" />
    </GridLayout>

</LinearLayout>
